{
  "version": 2,
  "builds": [
    {
      "src": "app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "routes/**",
          "controllers/**",
          "middleware/**",
          "models/**",
          "utils/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "src": "/(.*)",
      "dest": "app.ts"
    }
  ]
}
